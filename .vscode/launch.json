{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug current file",
            "program": "${file}",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}